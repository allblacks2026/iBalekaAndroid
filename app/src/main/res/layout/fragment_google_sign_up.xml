<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="Fragments.GoogleSignUpFragment"
    android:orientation="vertical">


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/basic_info"
                android:textAlignment="center"
                android:textColor="@color/whiteColor"
                android:background="@color/primary_dark"
                android:layout_margin="5dp"
                android:textSize="16sp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id = "@+id/GoogleSignInNameTextView"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textSize="16sp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id = "@+id/GoogleSignInEmailTextView"
                android:textAlignment="center"
                android:textStyle="italic"
                android:textSize="16sp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:id = "@+id/GoogleSignInDateOfBirthTextView"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id = "@+id/GoogleSignInGenderTextView"
                android:textAlignment="center"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:id="@+id/GoogleSignInLocationTextView"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/google_sign_in_string"
                android:textAlignment="center"
                android:textColor="@color/whiteColor"
                android:background="@color/primary_dark"
                android:layout_margin="5dp"
                android:textSize="16sp"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Your Username"
                android:textAlignment="center"
                android:id = "@+id/GoogleSignInUsernameTextView"
                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Your Password"
                android:textAlignment="center"
                android:inputType="textPassword"
                android:id = "@+id/GoogleSignInPasswordTextView"/>
            <com.jaredrummler.materialspinner.MaterialSpinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Security Question"
                android:id = "@+id/GoogleSignInSecurityQuestion"
                android:textAlignment="center"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Security Answer"
                android:id = "@+id/GoogleSignInSecurityAnswer"
                android:textAlignment="center" />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:hint="Your Height (m)"
                android:id = "@+id/GoogleSignInHeightTextView"
                android:textAlignment="center"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Your Weight (kg)"
                android:id = "@+id/GoogleSignInWeightTextView"
                android:textAlignment="center"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:background="@drawable/custom_button"
                    android:text="Finalize Profile"
                    android:id = "@+id/GoogleSignInFinalizeProfileButton"
                    android:textColor="@color/whiteColor"
                    />
            </RelativeLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>
